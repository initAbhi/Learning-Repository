<%- include('../partials/head') %>
</head>

<body class="bg-gray-50 text-gray-800 font-sans">
    <!-- Navigation Bar -->
    <%- include('../partials/nav') %><!-- Form Section -->
    <main class="container mx-auto mt-10 px-4">
        <div class="bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto">
            <h1 class="text-2xl font-bold text-purple-600 text-center mb-6">
                <%= editing ? "Edit" : "Register" %>your home
                here
            </h1>

            <form action="/host/<%= editing ? "edit-home" : "add-home"
                %>" method="POST" class="space-y-4">

                 <input name="id" type="text" value="<%= editing ? home.id : '' %>">
                <div>
                    <label for="houseName"
                        class="block text-gray-700 font-semibold mb-2">House
                        Name:</label>
                    <input
                        value="<%= editing ? home.houseName : '' %>"
                        type="text" id="houseName" name="houseName"
                        placeholder="Enter your house name"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required />
                    <label for="price"
                        class="block text-gray-700 font-semibold mb-2">Price:</label>
                    <input
                        value="<%= editing ? home.price : '' %>"
                        type="text" id="price" name="price" placeholder="price"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required />
                    <label for="location"
                        class="block text-gray-700 font-semibold mb-2">Location:</label>
                    <input
                        value="<%= editing ? home.location : '' %>"
                        type="text" id="location" name="location"
                        placeholder="Location"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required />
                    <label for="rating"
                        class="block text-gray-700 font-semibold mb-2">Rating:</label>
                    <input
                        value="<%= editing ? home.rating : '' %>"
                        type="text" id="rating" name="rating"
                        placeholder="rating"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required />
                    <label for="photo"
                        class="block text-gray-700 font-semibold mb-2">Photo:</label>
                    <input
                        value="<%= editing ? home.photoUrl : '' %>"
                        type="text" id="photo" name="photo" placeholder="photo"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500"
                        required />
                        <label for="description"
                        class="block text-gray-700 font-semibold mb-2">Description:</label>
                        <textarea
                        value="<%= editing ? home.photoUrl : '' %>"
                        type="text" id="description" name="description" placeholder="Give a description for your house"
                        class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-purple-500"
                         ></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit"
                        class="w-full bg-purple-600 text-white py-3 rounded-lg font-bold text-sm hover:bg-purple-700 shadow-md transition">
                        <%= editing ? "Update" : "Add Home" %>
                    </button>
                </div>
            </form>
        </div>
    </main>

    <!-- Footer -->
    <footer class="mt-16 py-6 bg-gray-100">
        <div class="container mx-auto text-center text-sm text-gray-500">
            Â© 2024 Home Manager. All rights reserved.
        </div>
    </footer>
</body>

</html>