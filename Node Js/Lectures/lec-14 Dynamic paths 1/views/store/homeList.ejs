<%- include('../partials/head')  %>

  </head>
  <body class="bg-[#111] text-gray-800 font-sans">
    <!-- Navigation Bar -->
    <%- include('../partials/nav')  %>

     

    <!-- Main Content -->
    <main class="container mx-auto mt-10 px-4">
      <h1 class="text-2xl font-bold text-purple-600 mb-6 text-center">Our Registered Homes</h1>

      <!-- Homes List -->
      <ul class="flex flex-wrap gap-6 justify-center">
        <% homes.forEach(home => { %>
          <li class="bg-white border w-full sm:w-[90vw] md:w-[80vw] lg:w-[60vw] flex flex-col sm:flex-row justify-between items-center gap-4 border-gray-200 rounded-lg shadow-md hover:shadow-lg transition p-4 sm:p-6">
            <img class="w-full sm:w-auto max-w-[200px] rounded-lg" src="https://media.istockphoto.com/id/537331500/photo/programming-code-abstract-technology-background-of-software-deve.jpg?s=612x612&w=0&k=20&c=jlYes8ZfnCmD0lLn-vKvzQoKXrWaEcVypHnB5MuO-g8=" alt="home">
            <div class="flex flex-col sm:flex-row items-center sm:items-start gap-4 sm:gap-8 w-full">
              <h1 class="text-lg sm:text-2xl font-bold text-gray-700 mb-2 text-center sm:text-left"><%= home.houseName %></h1>
              <div class="flex flex-col gap-2">
                <p class="flex items-center text-sm sm:text-base text-gray-500">
                  <svg class="mr-2" width="15px" xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512">
                    <path d="M256 48c-79.5 0-144 61.39-144 137 0 87 96 224.87 131.25 272.49a15.77 15.77 0 0025.5 0C304 409.89 400 272.07 400 185c0-75.61-64.5-137-144-137z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/>
                    <circle cx="256" cy="192" r="48" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/>
                  </svg>
                  <%= home.location %>
                </p>
                <p class="text-sm sm:text-base text-gray-500"> $ - <%= home.price %></p>
                <p class="text-sm sm:text-base text-gray-500">Ratings : <%= home.rating %>⭐</p>
              </div>
            </div>
            <div class="mt-4 flex flex-col justify-center gap-6 sm:mt-0">
              <button class="bg-purple-600 text-white py-2 px-6 rounded-full text-sm hover:bg-purple-700 shadow-md transition w-full sm:w-auto">Rent</button>
              <button class="bg-purple-600 text-white py-2 px-6 rounded-full text-sm hover:bg-purple-700 shadow-md transition w-full sm:w-auto">Details</button>
            </div>
          </li>
        <% }); %>
      </ul>
      
      <!-- Add Home Button -->
      <div class="flex justify-center mt-8">
        <a href="/host/add-home" class="bg-purple-600 text-white py-2 px-6 rounded-full text-sm hover:bg-purple-700 shadow-md transition">
          + Add Home
        </a>
      </div>
    </main>

    <!-- Footer -->
    <footer class="mt-16 py-6 bg-gray-100">
      <div class="container mx-auto text-center text-sm text-gray-500">
        © 2024 Home Manager. All rights reserved.
      </div>
    </footer>

    <script>
      // Toggle Menu for Mobile
      const menuToggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('menu');
      menuToggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
